TinyCart.options.formKey = '<?php echo $this->helper('vc_ajaxcart')->getFormKey();?>';

TinyCart.options.container = '#header-cart';
TinyCart.options.qtyLabel = '.header-minicart .count';
TinyCart.options.qtyButtonPrefix = '#qbutton-';
TinyCart.options.qtyInputPrefix = '#qinput-';
