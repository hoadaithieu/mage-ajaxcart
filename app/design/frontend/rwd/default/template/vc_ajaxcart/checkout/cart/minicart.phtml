AjaxCart.init();
jQuery(function() {
	jQuery(TinyCart.options.container).hide();
	if (jQuery(TinyCart.options.qtyLabel).length > 0) {
		jQuery(TinyCart.options.qtyLabel).parent().unbind('click').click(function(event) {
			event.preventDefault();
			jQuery(TinyCart.options.container).show();
		});
	}
});

</script>
